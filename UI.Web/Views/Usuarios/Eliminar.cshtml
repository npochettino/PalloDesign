@model UI.Web.ViewModels.Usuarios.UsuarioViewModel
@{
    ViewBag.Title = "Eliminar Usuario";
}

<div class="cabecera">
    Eliminar Usuario
</div>

<div class="container">
    <fieldset>
        <legend>Información General</legend>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.NombreCompleto)</dt>
            <dd>@Html.DisplayFor(model => model.NombreCompleto)</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.DNI)</dt>
            <dd>@Html.DisplayFor(model => model.DNI)</dd>
        </dl>
    </fieldset>

    <div class="row">
        <div class="form-group col-md-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                if(Model.DNI != "admin")
                {
                    <button type="submit" name="Delete" value="Delete" class="btn btn-primary">Eliminar</button>
                }
                <a href="@Url.Action("Index", "Usuarios")" class="btn btn-default">Volver</a>
            }
        </div>
    </div>
</div>



