@model UI.Web.ViewModels.Sueldos.SueldoEncargadoViewModel
@using UI.Web.Helpers;
@{
    ViewBag.Title = "Liquidar Sueldo Encargado";
}

@using (Html.BeginForm("Encargado", "Sueldos", FormMethod.Post, new { @class = "formulario form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="container">
        <fieldset>
            <legend>Liquidar Sueldo Encargado</legend>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Encargado, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.Encargado, new SelectList(ViewBag.Vendedores, "NombreCompleto", "NombreCompleto"), "Seleccionar...", htmlAttributes: new { @class = "form-control", autofocus = "" })
                            @Html.HiddenFor(model => model.Encargado)
                            @Html.ValidationMessageFor(model => model.Encargado, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Horas, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.DecimalFor(model => model.Horas, Model.Horas, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Horas, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PrecioHora, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.DecimalFor(model => model.PrecioHora, Model.PrecioHora, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PrecioHora, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

        </fieldset>

        @*Botones Aceptar y Cancelar*@
        <div class="row">
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-primary">Aceptar</button>
                <a href="@Url.Action("Index", "Sueldos")" class="btn btn-default">Cancelar</a>
            </div>
        </div>

    </div>
}

