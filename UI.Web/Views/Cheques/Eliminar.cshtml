@model UI.Web.ViewModels.Cheques.ChequeEliminarViewModel

@{
    ViewBag.Title = "Eliminar Cheque";
}

<div class="cabecera">
    Eliminar Cheque
</div>

<div class="container">
    <fieldset>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Numero)</dt>
            <dd>@Html.DisplayFor(model => model.Numero)</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Banco)</dt>
            <dd>@Html.DisplayFor(model => model.Banco)</dd>
        </dl>
    </fieldset>

    <fieldset>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.FechaVencimiento)</dt>
            <dd>@Html.DisplayFor(model => model.FechaVencimiento)</dd>
        </dl>
    </fieldset>

    <fieldset>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Firmante)</dt>
            <dd>@Html.DisplayFor(model => model.Firmante)</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Monto)</dt>
            <dd>@Html.DisplayFor(model => model.Monto)</dd>
        </dl>
    </fieldset>

    <fieldset>
        <legend>Datos Adicionales</legend>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Cobrado)</dt>
            <dd>@Html.DisplayFor(model => model.Cobrado)</dd>
        </dl>
    </fieldset>

    <div class="row">
        <div class="form-group col-md-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <button type="submit" name="Delete" value="Delete" class="btn btn-primary">Eliminar</button>
                <a href="@Url.Action("Index", "Cheques")" class="btn btn-default">Volver</a>
            }
        </div>
    </div>
</div>

