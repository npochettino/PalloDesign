    ViewBag.Title = "Eliminar Cliente";
}

<div class="cabecera">
    Eliminar Cliente
</div>

<div class="container">
    <fieldset>
        <legend>Información General</legend>
        @*<dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.RazonSocial)</dt>
            <dd>@Html.DisplayFor(model => model.RazonSocial)</dd>
        </dl>*@
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.NombreCompleto)</dt>
            <dd>@Html.DisplayFor(model => model.NombreCompleto)</dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.DNI)</dt>
            <dd>@Html.DisplayFor(model => model.DNI)</dd>
        </dl>
    </fieldset>

    <fieldset>
        <legend>Domicilio</legend>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.DomicilioCompleto)</dt>
            <dd>@Html.DisplayFor(model => model.DomicilioCompleto)</dd>
        </dl>
